/* withdraw-details.wxss */
page {
  height: 100vh;
  background: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding-top: 100rpx;
  width: 100%;
  box-sizing: border-box;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: #fff;
  padding: 20rpx;
  padding-top: 60rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 10rpx;
}

.back-icon {
  font-size: 32rpx;
  color: #333;
  margin-right: 8rpx;
}

.back-text {
  font-size: 28rpx;
  color: #333;
}

.page-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.detail-list {
  position: fixed;
  top: 150rpx;
  left: 0;
  right: 0;
  background: #fff;
  width: 100%;
  z-index: 100;
}

.detail-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  min-height: 88rpx;
  box-sizing: border-box;
  width: 100%;
  margin: 0;
}

.detail-row:last-child {
  border-bottom: none;
}

.total-row {
  background: #f8f9fa;
}

.row-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.row-label {
  font-size: 32rpx;
  color: #333;
  font-weight: normal;
}

.row-amount {
  font-size: 34rpx;
  font-weight: normal;
  text-align: right;
  color: #333;
}

.row-amount.withdrawn {
  color: #333;
}

.row-amount.unwithdrawn {
  color: #333;
}

.row-amount.total {
  color: #333;
  font-size: 36rpx;
}

.withdraw-section {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 520rpx;
}

.withdraw-btn {
  background: linear-gradient(135deg, #ff7e5f, #feb47b);
  color: #fff;
  text-align: center;
  padding: 32rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(255,126,95,0.3);
} 