/* income-details.wxss */
.page-wrapper {
  height: 100vh;
  background: #f5f5f5;
}

.header {
  background: #fff;
  padding: 20rpx;
  padding-top: 60rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 10rpx;
}

.back-icon {
  font-size: 32rpx;
  color: #333;
  margin-right: 8rpx;
}

.back-text {
  font-size: 28rpx;
  color: #333;
}

.page-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.tab-container {
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 12rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  margin: 0;
  text-align: center;
}

.tab-text {
  display: block;
  text-align: center;
  width: 100%;
}

.tab-item.active {
  color: #e94f4f;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #e94f4f;
  border-radius: 2rpx;
}

.summary-container {
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 30rpx 40rpx;
  margin: 20rpx;
  border-radius: 12rpx;
}

.summary-item {
  flex: 1;
  text-align: center;
}

.summary-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.summary-value {
  display: block;
  font-size: 36rpx;
  color: #e94f4f;
  font-weight: bold;
}

.list-container {
  margin: 20rpx;
  background: #fff;
  border-radius: 12rpx;
}

.income-list {
  height: calc(100vh - 400rpx);
}

.income-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  margin: 0 20rpx;
}

.income-item:last-child {
  border-bottom: none;
}

.date {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.amount {
  font-size: 28rpx;
  color: #e94f4f;
  font-weight: bold;
  min-width: 140rpx;
  text-align: right;
  margin-left: 40rpx;
}

.loading, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
  background: #fff;
}

.summary-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(255,126,95,0.08);
  padding: 40rpx 30rpx;
  margin: 20rpx 30rpx 30rpx;
}

.summary-title {
  font-size: 32rpx;
  color: #e94f4f;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.summary-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.details-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(255,126,95,0.08);
  padding: 40rpx 30rpx;
  margin: 0 30rpx;
}

.details-title {
  font-size: 32rpx;
  color: #e94f4f;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.placeholder {
  text-align: center;
  padding: 80rpx 0;
}

.placeholder-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.placeholder-desc {
  display: block;
  font-size: 24rpx;
  color: #ccc;
} 