/* income-details.wxss */
page {
  height: 100vh;
  background: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding-top: 80rpx;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: #fff;
  padding: 20rpx;
  padding-top: 60rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 10rpx;
}

.back-icon {
  font-size: 32rpx;
  color: #333;
  margin-right: 8rpx;
}

.back-text {
  font-size: 28rpx;
  color: #333;
}

.page-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.summary-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(255,126,95,0.08);
  padding: 40rpx 30rpx;
  margin: 20rpx 30rpx 30rpx;
}

.summary-title {
  font-size: 32rpx;
  color: #e94f4f;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.summary-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.summary-item {
  text-align: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.summary-value {
  font-size: 28rpx;
  color: #e94f4f;
  font-weight: bold;
}

.details-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(255,126,95,0.08);
  padding: 40rpx 30rpx;
  margin: 0 30rpx;
}

.details-title {
  font-size: 32rpx;
  color: #e94f4f;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.placeholder {
  text-align: center;
  padding: 80rpx 0;
}

.placeholder-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.placeholder-desc {
  display: block;
  font-size: 24rpx;
  color: #ccc;
} 