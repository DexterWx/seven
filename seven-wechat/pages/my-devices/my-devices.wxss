/* my-devices.wxss */
page {
  height: 100vh;
  background: #f5f5f5;
}

.container {
  height: 100vh;
  width: 100%;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: #fff;
  padding: 20rpx;
  padding-top: 60rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 10rpx;
}

.back-icon {
  font-size: 32rpx;
  color: #333;
  margin-right: 8rpx;
}

.back-text {
  font-size: 28rpx;
  color: #333;
}

.page-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.device-list {
  position: fixed;
  top: 120rpx;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 0 20rpx;
}

.device-item {
  background: #fff;
  margin-bottom: 15rpx;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.device-item:first-child {
  margin-top: 20rpx;
}

.device-id {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.device-income {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.device-owner {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.device-phone {
  font-size: 28rpx;
  color: #999;
}

.device-actions {
  margin-top: 12rpx;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  margin: 0;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  border-radius: 12rpx;
  border: none;
}

.action-btn.release-btn {
  color: #fff;
  background: #ff9500;
}

.action-btn.income-detail {
  color: #fff;
  background: #4a90e2;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background: #fff;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.modal-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.confirm {
  background: #333;
  color: #fff;
}

.empty-state, .loading-state, .no-more-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text, .loading-text, .no-more-text {
  font-size: 28rpx;
  color: #999;
} 