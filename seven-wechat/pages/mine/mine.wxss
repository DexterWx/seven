/* pages/mine/mine.wxss */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  padding-top: 80rpx;
}
.avatar-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #eee;
}
.username {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #333;
}
.desc {
  font-size: 28rpx;
  color: #888;
  margin-top: 40rpx;
}
.logout-btn {
  width: 80%;
  margin: 60rpx auto 0 auto;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #f44;
  color: #fff;
  border-radius: 10rpx;
  font-size: 32rpx;
  display: block;
}