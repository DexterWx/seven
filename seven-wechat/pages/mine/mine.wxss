/* pages/mine/mine.wxss */
page {
  height: 100vh;
  background: #f5f5f5;
}

.container {
  min-height: 100vh;
  width: 100%;
}

/* 用户信息区域 */
.user-header {
  padding: 60rpx 40rpx 40rpx;
  background: linear-gradient(135deg, #ff7e5f, #feb47b);
  width: 100%;
  box-sizing: border-box;
}

.avatar-section {
  display: flex;
  align-items: center;
  width: 100%;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255,255,255,0.2);
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 28rpx;
  color: rgba(255,255,255,0.7);
}

/* 我的服务区域 */
.services-section {
  background: #fff;
  border-radius: 20rpx;
  margin: 20rpx 20rpx 80rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
  overflow: hidden;
}

.service-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.service-item:first-child {
  padding-top: 40rpx;
}

.service-item:last-child {
  border-bottom: none;
  padding-bottom: 40rpx;
  border-radius: 0 0 20rpx 20rpx;
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.settings-icon {
  background: #666;
}

.bind-icon {
  background: #888;
}

.contact-icon {
  background: #555;
}

.payment-icon {
  background: #777;
}

.logout-icon {
  background: #999;
}

.icon {
  font-size: 36rpx;
  color: #fff;
}

.service-info {
  flex: 1;
  min-width: 0;
}

.service-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  word-break: break-all;
}

.service-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.service-arrow {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 10rpx;
  flex-shrink: 0;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
  box-sizing: border-box;
}

.modal-content {
  background: #fff;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.modal-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-body {
  margin-bottom: 40rpx;
}

.modal-input {
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.confirm {
  background: #333;
  color: #fff;
}