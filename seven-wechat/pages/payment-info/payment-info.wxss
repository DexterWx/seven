/* pages/payment-info/payment-info.wxss */
page {
  background: #f5f5f5;
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: #fff;
  padding: 20rpx;
  padding-top: 60rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 10rpx;
}

.back-icon {
  font-size: 32rpx;
  color: #333;
  margin-right: 8rpx;
}

.back-text {
  font-size: 28rpx;
  color: #333;
}

.page-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.card-list {
  margin-top: 100rpx;
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 18rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  margin: 0 0 32rpx 0;
  padding: 32rpx 28rpx 24rpx 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #222;
  margin-bottom: 18rpx;
}

.card-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  justify-content: space-between;
}

.card-row:last-child {
  margin-bottom: 0;
}

.label {
  color: #888;
  font-size: 26rpx;
  min-width: 140rpx;
  text-align: left;
}

.value {
  color: #222;
  font-size: 26rpx;
  word-break: break-all;
  text-align: right;
  flex: 1;
}

/* 保留弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
  box-sizing: border-box;
}

.modal-content {
  background: #fff;
  border-radius: 20rpx;
  width: 100%;
  max-width: 700rpx;
  padding: 40rpx;
  box-sizing: border-box;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-body {
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.modal-input {
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.confirm {
  background: #333;
  color: #fff;
} 