<!--pages/payment-info/payment-info.wxml-->
<view class="container">
  <view class="header">
    <view class="back-btn" bindtap="navigateBack">
      <text class="back-icon">←</text>
      <text class="back-text">返回</text>
    </view>
    <view class="page-title">结算信息</view>
  </view>

  <view class="card-list">
    <view class="card" bindtap="editBankCard">
      <view class="card-title">银行卡</view>
      <view class="card-row">
        <text class="label">银行卡号：</text>
        <text class="value">{{bankInfo.card_number || '未设置'}}</text>
      </view>
      <view class="card-row">
        <text class="label">姓名：</text>
        <text class="value">{{bankInfo.holder_name || '未设置'}}</text>
      </view>
      <view class="card-row">
        <text class="label">身份证号：</text>
        <text class="value">{{bankInfo.id_number || '未设置'}}</text>
      </view>
      <view class="card-row">
        <text class="label">手机号：</text>
        <text class="value">{{bankInfo.phone || '未设置'}}</text>
      </view>
    </view>

    <view class="card" bindtap="editAlipay">
      <view class="card-title">支付宝</view>
      <view class="card-row">
        <text class="label">支付宝账号：</text>
        <text class="value">{{alipayInfo.account || '未设置'}}</text>
      </view>
      <view class="card-row">
        <text class="label">姓名：</text>
        <text class="value">{{alipayInfo.holder_name || '未设置'}}</text>
      </view>
      <view class="card-row">
        <text class="label">身份证号：</text>
        <text class="value">{{alipayInfo.id_number || '未设置'}}</text>
      </view>
      <view class="card-row">
        <text class="label">手机号：</text>
        <text class="value">{{alipayInfo.phone || '未设置'}}</text>
      </view>
    </view>
  </view>

  <!-- 银行卡编辑弹窗 -->
  <view class="modal" wx:if="{{showBankModal}}">
    <view class="modal-content">
      <view class="modal-title">编辑银行卡</view>
      <view class="modal-body">
        <view class="input-group">
          <view class="input-label">银行卡号</view>
          <input class="modal-input" placeholder="请输入银行卡号" value="{{editBankCard.card_number}}" bindinput="onEditBankCardNumber" type="number"/>
        </view>
        <view class="input-group">
          <view class="input-label">姓名</view>
          <input class="modal-input" placeholder="请输入姓名" value="{{editBankCard.holder_name}}" bindinput="onEditBankName"/>
        </view>
        <view class="input-group">
          <view class="input-label">身份证号</view>
          <input class="modal-input" placeholder="请输入身份证号" value="{{editBankCard.id_number}}" bindinput="onEditBankIdCard"/>
        </view>
        <view class="input-group">
          <view class="input-label">手机号</view>
          <input class="modal-input" placeholder="请输入手机号" value="{{editBankCard.phone}}" bindinput="onEditBankPhone" type="number"/>
        </view>
      </view>
      <view class="modal-footer">
        <button class="modal-btn cancel" bindtap="cancelEditBank">取消</button>
        <button class="modal-btn confirm" bindtap="confirmEditBank">保存</button>
      </view>
    </view>
  </view>

  <!-- 支付宝编辑弹窗 -->
  <view class="modal" wx:if="{{showAlipayModal}}">
    <view class="modal-content">
      <view class="modal-title">编辑支付宝</view>
      <view class="modal-body">
        <view class="input-group">
          <view class="input-label">支付宝账号</view>
          <input class="modal-input" placeholder="请输入支付宝账号" value="{{editAlipay.account}}" bindinput="onEditAlipayAccount"/>
        </view>
        <view class="input-group">
          <view class="input-label">姓名</view>
          <input class="modal-input" placeholder="请输入姓名" value="{{editAlipay.holder_name}}" bindinput="onEditAlipayName"/>
        </view>
        <view class="input-group">
          <view class="input-label">身份证号</view>
          <input class="modal-input" placeholder="请输入身份证号" value="{{editAlipay.id_number}}" bindinput="onEditAlipayIdCard"/>
        </view>
        <view class="input-group">
          <view class="input-label">手机号</view>
          <input class="modal-input" placeholder="请输入手机号" value="{{editAlipay.phone}}" bindinput="onEditAlipayPhone" type="number"/>
        </view>
      </view>
      <view class="modal-footer">
        <button class="modal-btn cancel" bindtap="cancelEditAlipay">取消</button>
        <button class="modal-btn confirm" bindtap="confirmEditAlipay">保存</button>
      </view>
    </view>
  </view>
</view> 